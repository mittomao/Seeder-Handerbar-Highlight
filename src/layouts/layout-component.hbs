<!DOCTYPE html>
<html>

<head>
  <title>{{title}}</title>

  <meta charset="utf-8">
  <meta name="keywords" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
  <meta name="author" content="">
  <meta name="GENERATOR" content="MSHTML 11.00.9600.18838">

  <base href="{{@root.baseUrl}}" />

  <link rel="shortcut icon" href="./favicon.svg" type="image/svg+xml">

  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css"
    integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link
    href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@300;400;500;600;700&family=Roboto:wght@400;500;700&display=swap"
    rel="stylesheet">

  {{!-- Highligh Style --}}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.1/styles/vs2015.min.css">

  <style>
    .component-container {
      margin: 0 auto;
    }

    .component-dev {
      counter-reset: count;
      margin-bottom: 5rem;
    }

    .component-dev>.container>.title,
    .component-dev>.block>.container>.sub-title {
      line-height: 1.1;
      letter-spacing: 0;
      font-weight: bold;
    }

    .component-dev>.container>.title {
      font-size: 2em;
      margin-bottom: 20px;
      border-left: 10px solid currentColor;
      padding-left: 10px;
    }

    .component-dev>.block {
      margin-top: 20px;
    }

    .component-dev>.block>.block-demo {
      padding-top: 50px;
    }

    .component-dev>.block>.container>.sub-title {
      font-size: 1.5em;
      margin-bottom: 10px;
    }

    .component-dev .section.\--custom-height {
      height: 35vh;
    }

    .component-dev>.block>.container>.sub-title:before {
      counter-increment: count;
      content: counter(count) '. ';
    }

    .component-dev>.block>.container>.code-frame {
      position: relative;
      font-family: Consolas, monospace;
      font-size: .8em;
      z-index: 1;
      overflow: auto;
    }

    .component-dev>.block>.container>.code-frame>textarea {
      width: 100%;
      height: 300px;
    }

    .component-dev>.block>.container>.code-frame>code {
      padding: 20px;
    }

    .component-dev .color-block {
      width: 100%;
      height: 150px;
      border: 3px solid #C3C3C3;
    }

    .component-dev .demo-ico em[class^="ico"],
    .component-dev .demo-ico em.fa {
      color: #C9BA9E;
      font-size: 20px;
    }
  </style>
  {{!-- End Highligh Style --}}

  {{#if hasVendorStyles}}
  <link href="styles/vendors.css" rel="stylesheet">
  {{/if}}
  <link href="./styles/main.css" rel="stylesheet">

  {{#> head-block}}
  {{/head-block}}

  <script src="scripts/jquery.min.js"></script>
</head>

<body>
  <div class="component-container">
    <div class="component-dev">
      <div class="container">
        <h1 class="title"></h1>
      </div>

      <div class="block">
        <div class="container">
          <h2 class="sub-title">
            Demo
          </h2>
        </div>
        <div class="block-demo">
          {{#> content-block}}
          {{/content-block}}
        </div>
      </div>

      <div class="block">
        <div class="container">
          <h2 class="sub-title">Code Frame</h2>
          <div class="code-frame">
            <textarea name="" id="" cols="30" rows="10">
              {{#> content-block}}
              {{/content-block}}
            </textarea>
          </div>
        </div>
      </div>
    </div>
  </div>


  <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
  <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
  <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>

  {{!-- Highlight Script --}}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/js-beautify/1.13.5/beautify-html.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.1/highlight.min.js"></script>
  <script "https://cdnjs.cloudflare.com/ajax/libs/highlight.js/10.7.1/languages/htmlbars.min.js"></script>
  <script>
    document.querySelectorAll('.code-frame textarea').forEach(function (element) {
      var pre = document.createElement('pre');
      var code = document.createElement('code');
      var preCode = element.value
        .trim()
        .replace(/"\{/g, "'{")
        .replace(/"\[/g, "'[")
        .replace(/\}"/g, "}'")
        .replace(/\]"/g, "]'")

      var html = html_beautify(preCode, {
        indent_size: 4,
        indent_char: ' ',
        break_chained_methods: true
      })

      code.innerText = html;

      code.classList.add('html');
      pre.appendChild(code);
      element.insertAdjacentElement('afterend', pre);
      element.parentElement.removeChild(element);
    });

    hljs.highlightAll();
  </script>
  {{!-- End Highlight Script --}}

  {{#if hasVendorScripts}}
  <script src="scripts/vendors.min.js"></script>
  {{/if}}
  <script src="scripts/app.min.js"></script>
  {{#> scripts-block}}
  {{!-- Custom scripts per page can be added. --}}
  {{/scripts-block}}
</body>

</html>