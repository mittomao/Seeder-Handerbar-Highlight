<!doctype html>
<html lang="en">

<head>
    <title>Site Map</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .block-card {
            margin-bottom: 50px;
        }

        .block-card h1 {
            margin-bottom: 20px;
            line-height: 1.5;
            background-color: pink;
            padding: 10px;
            border-radius: 10px;
            font-size: 28px;
        }

        .block-card .card {
            padding: 10px;
            text-align: center;
        }

        .block-card .card a {
            text-decoration: none;
            color: black;
        }

        .block-card .card:hover{
            background-color: aqua;
        }
    </style>
</head>

<body>
    <div class="container-fluid">
        <div class="block-card">
            <h1>Page</h1>
            <div class="row">
                {{> foundation/group-link pageTitle = "Home Page" pageLink = "/index.html" }}
            </div>
        </div>
        <div class="block-card">
            <h1>Components</h1>
            <div class="row">
                {{> foundation/group-link pageTitle = "Header" pageLink = "/components/c-header.html" }}
                {{> foundation/group-link pageTitle = "Footer" pageLink = "/components/c-footer.html" }}
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
        integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
        integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
        crossorigin="anonymous"></script>
</body>

</html>